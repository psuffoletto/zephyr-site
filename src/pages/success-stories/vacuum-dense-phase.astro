    padding: 1.5rem 0;
  }

  .cs-hero-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 2.5rem;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255,255,255,0.08);
  }

  .cs-meta-label {
    display: block;
    font-family: var(--font-display);
