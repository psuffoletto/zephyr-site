---
import DetailProductPage from '../../../components/DetailProductPage.astro';
import { getProductBySlug, getCategoryBySlug } from '../../../data/products';

const product = getProductBySlug('13-02-bag-dump-station')!;
const category = getCategoryBySlug(product.category)!;
---

<DetailProductPage product={product} category={category} />

<style is:global>
  .prod-hero-img {
    width: 225% !important;
    max-height: none !important;
    object-fit: cover !important;
  }
</style>
