---
import BaseLayout from '../../layouts/BaseLayout.astro';

const categories = [
  {
    name: 'Cartridge Collectors',
    desc: 'High-efficiency cartridge dust collectors for fine particulate capture in industrial processing environments.',
    num: '01',
    href: '/dust-collection/cartridge-collectors',
  },
  {
    name: 'Baghouse Filters',
    desc: 'Heavy-duty baghouse filtration systems for high-volume dust collection in demanding applications.',
    num: '02',
    href: '/dust-collection/baghouse-filters',
  },
  {
    name: 'Ventilation Systems',
    desc: 'Custom-designed ventilation and ductwork solutions engineered for optimal airflow and dust capture.',
    num: '03',
    href: '/dust-collection/ventilation-systems',
  },
];
---

<BaseLayout title="Dust Collection" description="Engineered dust collection systems — cartridge collectors, baghouse filters, and ventilation solutions for industrial environments.">

  <!-- ===== HERO ===== -->
  <section class="dc-hero">
    <div class="dc-hero-bg"></div>
    <div class="container" style="position: relative; z-index: 1;">
      <a href="/" class="dc-breadcrumb">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none"><path d="M10 12L6 8L10 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/></svg>
        Home
      </a>
      <span class="label" style="color: var(--zephyr-orange); margin-top: 1rem; display: block;">Industrial Ventilation</span>
      <h1 class="display-xl" style="color: white; margin-top: 0.5rem;">Dust Collection<br /><span style="color: var(--zephyr-orange);">Systems</span></h1>
      <p class="dc-hero-desc">
        Engineered dust collection systems for industrial environments — cartridge collectors, baghouse filters, and custom ventilation solutions designed to meet the most demanding air quality requirements.
      </p>
    </div>
  </section>

  <!-- ===== PRODUCT CATEGORIES ===== -->
  <section class="section" id="categories">
    <div class="container">
      <div class="section-header reveal">
        <span class="label" style="color: var(--zephyr-orange);">01 — Product Line</span>
        <h2 class="display-lg" style="margin-top: 0.5rem;">What We Build</h2>
        <p class="accent-text" style="color: var(--steel-400); margin-top: 0.25rem;">Custom solutions for industrial ventilation</p>
      </div>
    </div>

    <div class="dc-grid">
      {categories.map((cat, i) => (
        <a href={cat.href} class="dc-card reveal" data-delay={i}>
          <div class="dc-bg-num">{cat.num}</div>
          <span class="label dc-cat">Dust Collection</span>
          <h3 class="display-md dc-name">{cat.name}</h3>
          <p class="dc-desc">{cat.desc}</p>
        </a>
      ))}
    </div>
  </section>

  <!-- ===== CTA ===== -->
  <section class="cta-section reveal">
    <div class="container" style="text-align: center;">
      <span class="label" style="color: var(--zephyr-orange);">Ready to get started?</span>
      <h2 class="display-lg" style="color: white; margin-top: 0.75rem;">Tell Us About<br />Your Application</h2>
      <p style="color: var(--steel-300); max-width: 500px; margin: 1rem auto 2rem; font-weight: 300; line-height: 1.7;">
        Every project starts with a conversation. Share your dust collection challenge and we'll engineer the right solution.
      </p>
      <a href="/contact" class="btn btn--primary">Let's Connect</a>
    </div>
  </section>

</BaseLayout>

<style>
  /* ===== HERO ===== */
  .dc-hero {
    position: relative;
    padding: 8rem 2rem 5rem;
    background: var(--steel-900);
    overflow: hidden;
  }
  .dc-hero-bg {
    position: absolute; inset: 0;
    background:
      radial-gradient(ellipse at 30% 60%, rgba(232, 97, 45, 0.06) 0%, transparent 50%),
      radial-gradient(ellipse at 70% 20%, rgba(52, 73, 94, 0.2) 0%, transparent 50%);
  }
  .dc-breadcrumb {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-family: var(--font-display);
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    color: var(--steel-400);
    transition: color 0.2s;
  }
  .dc-breadcrumb:hover { color: var(--zephyr-orange); }
  .dc-hero-desc {
    color: var(--steel-300);
    font-weight: 300;
    line-height: 1.7;
    margin-top: 1rem;
    max-width: 600px;
  }

  /* ===== SECTION HEADERS ===== */
  .section-header {
    margin-bottom: 3rem;
  }

  /* ===== PRODUCT GRID ===== */
  .dc-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: 2px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2px;
  }

  .dc-card {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 2.5rem 2rem;
    min-height: 300px;
    background: linear-gradient(145deg, #f8f9fb 0%, #f0f2f5 100%);
    overflow: hidden;
    color: var(--steel-800);
    text-decoration: none;
    transition: all 0.4s var(--ease-out);
  }

  .dc-card::before {
    content: '';
    position: absolute;
    top: 0; left: 0; right: 0;
    height: 3px;
    background: var(--zephyr-orange);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.5s var(--ease-out);
  }

  .dc-card:hover {
    background: linear-gradient(145deg, var(--steel-800) 0%, var(--steel-900) 100%);
    color: white;
  }

  .dc-card:hover::before {
    transform: scaleX(1);
  }

  .dc-bg-num {
    position: absolute;
    top: -10px; right: -5px;
    font-family: var(--font-display);
    font-weight: 900;
    font-size: 8rem;
    color: rgba(0, 0, 0, 0.03);
    line-height: 1;
    pointer-events: none;
    transition: color 0.4s ease;
  }

  .dc-card:hover .dc-bg-num {
    color: rgba(232, 97, 45, 0.06);
  }

  .dc-cat {
    color: var(--zephyr-orange);
    margin-bottom: 0.5rem;
  }

  .dc-name {
    margin-bottom: 0.75rem;
  }

  .dc-desc {
    font-weight: 300;
    font-size: 0.9rem;
    line-height: 1.65;
    color: var(--steel-400);
    flex-grow: 1;
  }

  .dc-card:hover .dc-desc {
    color: var(--steel-300);
  }

  /* ===== CTA ===== */
  .cta-section {
    background: var(--steel-900);
    padding: 6rem 2rem;
  }

  @media (max-width: 768px) {
    .dc-grid { grid-template-columns: 1fr; }
  }
</style>
