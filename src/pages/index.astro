<script>
  // Material Handling Accordion
  const mhPanels = document.querySelectorAll('.mh-panel');
  const mhDots = document.querySelectorAll('.mh-dot');

  function setMHActive(index) {
    mhPanels.forEach((p, i) => p.classList.toggle('active', i === index));
    mhDots.forEach((d, i) => d.classList.toggle('active', i === index));
  }

  mhPanels.forEach(panel => {
    panel.addEventListener('mouseenter', () => setMHActive(parseInt(panel.dataset.index)));
    panel.addEventListener('click', () => setMHActive(parseInt(panel.dataset.index)));
  });

  mhDots.forEach(dot => {
    dot.addEventListener('click', () => setMHActive(parseInt(dot.dataset.index)));
  });
</script>
