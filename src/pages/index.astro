---
import BaseLayout from '../layouts/BaseLayout.astro';

const products = [
  {
    name: 'Unload',
    category: 'Receiving & Material Introduction',
    desc: 'Bulk bag unloaders, vacuum wands, feed bins, and bag dump stations for introducing materials into your process.',
    href: '/products/unload',
    specs: [
      { value: 'Bulk Bag', label: 'Unloaders' },
      { value: 'Vacuum', label: 'Wands' },
      { value: 'Feed', label: 'Bins' },
    ],
    num: '01',
  },
  {
    name: 'Fill',
    category: 'Packaging & Dispensing',
    desc: 'Bedding dispensers and bulk bag fill frames for life science, vivarium, and industrial filling applications.',
    href: '/products/fill',
    specs: [
      { value: '4 Chute', label: 'Dispensing' },
      { value: '360°', label: 'Access' },
      { value: 'Auto', label: 'Detection' },
    ],
    num: '02',
  },
  {
    name: 'Store',
    category: 'Bulk Storage Solutions',
    desc: 'Modular storage silos with flexible inlet, outlet, and discharge configurations for intermediate system capacity.',
    href: '/products/store',
    specs: [
      { value: 'Modular', label: 'Design' },
      { value: 'Flexible', label: 'Inlet/Outlet' },
      { value: 'Multiple', label: 'Discharge' },
    ],
    num: '03',
  },
  {
    name: 'Filter',
    category: 'Material Separation & Filtration',
    desc: 'Material filter receivers with automatic pulse cleaning for vacuum pneumatic conveying systems.',
    href: '/products/filter',
    specs: [
      { value: 'PTFE', label: 'Filters' },
      { value: 'Auto', label: 'Pulse Clean' },
      { value: 'Modular', label: 'Design' },
    ],
    num: '04',
  },
  {
    name: 'Convey',
    category: 'Pneumatic Conveying Systems',
    desc: 'Packaged pneumatic conveyors and integrated bedding handling systems for short and long distance material transport.',
    href: '/products/convey',
    specs: [
      { value: '1,000 Ft.', label: 'Max Distance' },
      { value: 'Enclosed', label: 'Lines' },
      { value: 'Vacuum', label: 'Powered' },
    ],
    num: '05',
  },
  {
    name: 'Clean',
    category: 'Dust Collection & Containment',
    desc: 'Integrated dust collection and containment solutions for unloading, filling, and dispensing operations.',
    href: '/products/clean',
    specs: [
      { value: 'Integral', label: 'Dust Control' },
      { value: 'HEPA', label: 'Available' },
      { value: 'Pulse', label: 'Cleaning' },
    ],
    num: '06',
  },
  {
    name: 'Automate',
    category: 'Controls & Automation',
    desc: 'Non-proprietary PLC-based controls to automate all process functions in pneumatic conveying systems.',
    href: '/products/automate',
    specs: [
      { value: 'PLC', label: 'Based' },
      { value: 'VFD', label: 'Control' },
      { value: 'HMI', label: 'Touch Screen' },
    ],
    num: '07',
  },
  {
    name: 'Power',
    category: 'Vacuum Power Units',
    desc: 'Vacuum power units and blower packages that drive pneumatic conveying systems for your facility.',
    href: '/products/power',
    specs: [
      { value: 'Vacuum', label: 'Power' },
      { value: 'Integral', label: 'Units' },
      { value: 'Custom', label: 'Sizing' },
    ],
    num: '08',
  },
];

const capabilities = [
  { title: 'Custom Engineering', desc: 'Every system designed to your exact specifications — no off-the-shelf compromises.' },
  { title: 'In-House Manufacturing', desc: 'Complete fabrication capability from raw steel to finished equipment, all under one roof.' },
  { title: 'PLC Integration', desc: 'Full control system design with ladder logic programming across multiple PLC platforms.' },
  { title: 'Field Support', desc: 'Installation assistance, commissioning, and ongoing technical support for every system we build.' },
];
---

<BaseLayout title="Home">

  <!-- ===== HERO ===== -->
  <section class="hero">
    <div class="hero-bg"></div>
    <div class="hero-grid"></div>
    <div class="hero-content">
      <div class="hero-eyebrow">
        <div class="hero-diamond"></div>
        <span>Zephyr Equipment, LLC</span>
        <div class="hero-diamond"></div>
      </div>
      <h1 class="display-xl">Built to<br /><span class="orange">Move</span></h1>
      <p class="hero-tagline accent-text">Engineered in Orchard Park, NY</p>
      <p class="hero-subtitle">
        Custom-designed bulk material handling equipment — unloading, conveying, filling,
        storage, and filtration systems built for the toughest environments.
      </p>
      <div class="hero-actions">
        <a href="/products" class="btn btn--primary">View Products</a>
        <a href="/contact" class="btn btn--outline" style="color: white; border-color: rgba(255,255,255,0.3);">
          Request a Quote
        </a>
      </div>
    </div>
    <div class="hero-scroll">
      <span>Explore</span>
      <div class="hero-scroll-line"></div>
    </div>
  </section>

  <!-- ===== PRODUCTS ===== -->
  <section class="section" id="products">
    <div class="container">
      <div class="section-header reveal">
        <span class="label" style="color: var(--zephyr-orange);">01 — Product Line</span>
        <h2 class="display-lg" style="margin-top: 0.5rem;">What We Build</h2>
        <p class="accent-text" style="color: var(--steel-400); margin-top: 0.25rem;">Custom solutions, no compromises</p>
      </div>
    </div>

    <div class="product-grid">
      {products.map((product, i) => (
        <a href={product.href} class="product-card reveal" data-delay={i}>
          <div class="product-bg-num">{product.num}</div>
          <span class="label product-cat">{product.category}</span>
          <h3 class="display-md product-name">{product.name}</h3>
          <p class="product-desc">{product.desc}</p>
          <div class="product-specs">
            {product.specs.map(spec => (
              <div class="spec">
                <div class="spec-val">{spec.value}</div>
                <div class="spec-lbl">{spec.label}</div>
              </div>
            ))}
          </div>
          <div class="product-arrow">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M4 10H16M16 10L11 5M16 10L11 15" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </a>
      ))}
    </div>
  </section>

  <!-- ===== PRODUCT CATEGORIES ===== -->
  <section class="section" style="background: #0a0a0a; padding: 5rem 2rem;">
    <div class="container" style="max-width: 1200px;">
      <div class="section-header reveal" style="text-align: center; margin-bottom: 2.5rem;">
        <span class="label" style="color: var(--zephyr-orange);">Explore Equipment</span>
        <h2 class="display-lg" style="color: white; margin-top: 0.5rem;">Product Categories</h2>
      </div>

      <div class="mh-accordion reveal">
        {products.map((product, i) => {
          const colors = ['dark', 'steel', 'dark', 'steel', 'orange', 'dark', 'steel', 'dark'];
          const color = colors[i];
          return (
            <div class={`mh-panel mh-panel--${color}${i === 0 ? ' active' : ''}`} data-index={i}>
              <div class="mh-pattern"></div>
              <span class="mh-collapsed-title">{product.name}</span>
              <div class="mh-number">{product.num}</div>
              <div class="mh-content">
                <div class="mh-subtitle">{product.category}</div>
                <h3 class="mh-title">{product.name}</h3>
                <p class="mh-desc">{product.desc}</p>
                <div class="mh-tags">
                  {product.specs.map(spec => (
                    <span>{spec.value} {spec.label}</span>
                  ))}
                </div>
                <a href={product.href} class={`mh-cta${color === 'orange' ? ' mh-cta--white' : ''}`}>
                  Explore {product.name}
                </a>
              </div>
              <div class="mh-accent"></div>
            </div>
          );
        })}
      </div>

      <div class="mh-nav">
        <button class="mh-nav-arrow mh-nav-prev" aria-label="Previous category">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M13 4L7 10L13 16" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <div class="mh-dots">
          {products.map((_, i) => (
            <button class={`mh-dot${i === 0 ? ' active' : ''}`} data-index={i}></button>
          ))}
        </div>
        <button class="mh-nav-arrow mh-nav-next" aria-label="Next category">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M7 4L13 10L7 16" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
    </div>
  </section>

  <!-- ===== BANNER ===== -->
  <section class="banner reveal">
    <div class="banner-pattern"></div>
    <div class="container" style="position: relative; text-align: center;">
      <h2 class="display-lg" style="color: white;">Custom Engineered.<br />American Built.</h2>
      <p class="accent-text" style="color: rgba(255,255,255,0.85); margin-top: 0.5rem;">Every system designed to your exact specifications</p>
      <div class="banner-stats">
        <div class="banner-stat">
          <div class="banner-stat-num">100%</div>
          <div class="banner-stat-lbl">Custom Design</div>
        </div>
        <div class="banner-stat">
          <div class="banner-stat-num">8</div>
          <div class="banner-stat-lbl">Product Lines</div>
        </div>
        <div class="banner-stat">
          <div class="banner-stat-num">NY</div>
          <div class="banner-stat-lbl">Manufactured</div>
        </div>
      </div>
    </div>
  </section>

  <!-- ===== CAPABILITIES ===== -->
  <section class="section">
    <div class="container">
      <div class="section-header reveal">
        <span class="label" style="color: var(--zephyr-orange);">02 — Capabilities</span>
        <h2 class="display-lg" style="margin-top: 0.5rem;">How We Work</h2>
        <p class="accent-text" style="color: var(--steel-400); margin-top: 0.25rem;">From concept to commissioning</p>
      </div>

      <div class="capabilities-grid">
        {capabilities.map((cap, i) => (
          <div class="capability-card reveal" data-delay={i}>
            <div class="capability-num">{String(i + 1).padStart(2, '0')}</div>
            <h3 class="display-md" style="font-size: 1.3rem; margin-bottom: 0.75rem;">{cap.title}</h3>
            <p style="color: var(--steel-400); font-weight: 300; line-height: 1.65;">{cap.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ===== CTA ===== -->
  <section class="cta-section reveal">
    <div class="container" style="text-align: center;">
      <span class="label" style="color: var(--zephyr-orange);">Ready to get started?</span>
      <h2 class="display-lg" style="color: white; margin-top: 0.75rem;">Tell Us About<br />Your Application</h2>
      <p style="color: var(--steel-300); max-width: 500px; margin: 1rem auto 2rem; font-weight: 300; line-height: 1.7;">
        Every project starts with a conversation. Share your material handling challenge and we'll engineer the right solution.
      </p>
      <a href="/contact" class="btn btn--primary">Get a Quote</a>
    </div>
  </section>

</BaseLayout>

<style>
  /* ===== HERO ===== */
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 6rem 2rem 4rem;
    overflow: hidden;
    background: var(--steel-900);
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background:
      linear-gradient(180deg, rgba(10, 16, 24, 0.45) 0%, rgba(10, 16, 24, 0.65) 100%),
      url('https://static.wixstatic.com/media/9d739b_b4e9e4b4bb4f4c08b9bea3f033c88464~mv2.jpg') center/cover no-repeat;
  }

  .hero-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(232, 97, 45, 0.04) 1px, transparent 1px),
      linear-gradient(90deg, rgba(232, 97, 45, 0.04) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse at center, black 20%, transparent 65%);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    animation: fadeUp 0.8s ease-out;
  }

  .hero-eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .hero-diamond {
    width: 10px;
    height: 10px;
    background: var(--zephyr-orange);
    transform: rotate(45deg);
  }

  .hero-eyebrow span {
    font-family: var(--font-display);
    font-weight: 600;
    font-size: 0.8rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--zephyr-orange);
  }

  .hero h1 {
    color: white;
    margin-bottom: 0.5rem;
  }

  .orange { color: var(--zephyr-orange); }

  .hero-tagline {
    color: var(--steel-300);
    margin-bottom: 1.5rem;
  }

  .hero-subtitle {
    font-weight: 300;
    font-size: 1.05rem;
    color: var(--steel-400);
    max-width: 560px;
    margin: 0 auto 2.5rem;
    line-height: 1.65;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .hero-scroll {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    z-index: 1;
  }

  .hero-scroll span {
    font-family: var(--font-display);
    font-size: 0.65rem;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: var(--steel-400);
  }

  .hero-scroll-line {
    width: 1px;
    height: 36px;
    background: linear-gradient(to bottom, var(--zephyr-orange), transparent);
    animation: scrollPulse 2s ease-in-out infinite;
  }

  /* ===== SECTION HEADERS ===== */
  .section-header {
    margin-bottom: 3rem;
  }

  /* ===== PRODUCT GRID ===== */
  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: 2px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2px;
  }

  .product-card {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 2.5rem 2rem;
    min-height: 360px;
    background: linear-gradient(145deg, #f8f9fb 0%, #f0f2f5 100%);
    overflow: hidden;
    text-decoration: none;
    color: var(--steel-800);
    transition: all 0.4s var(--ease-out);
  }

  .product-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--zephyr-orange);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.5s var(--ease-out);
  }

  .product-card:hover {
    background: linear-gradient(145deg, var(--steel-800) 0%, var(--steel-900) 100%);
    color: white;
  }

  .product-card:hover::before {
    transform: scaleX(1);
  }

  .product-bg-num {
    position: absolute;
    top: -10px;
    right: -5px;
    font-family: var(--font-display);
    font-weight: 900;
    font-size: 8rem;
    color: rgba(0, 0, 0, 0.03);
    line-height: 1;
    pointer-events: none;
    transition: color 0.4s ease;
  }

  .product-card:hover .product-bg-num {
    color: rgba(232, 97, 45, 0.06);
  }

  .product-cat {
    color: var(--zephyr-orange);
    margin-bottom: 0.5rem;
  }

  .product-name {
    margin-bottom: 0.75rem;
  }

  .product-desc {
    font-weight: 300;
    font-size: 0.9rem;
    line-height: 1.65;
    color: var(--steel-400);
    flex-grow: 1;
  }

  .product-card:hover .product-desc {
    color: var(--steel-300);
  }

  .product-specs {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-top: 1.5rem;
    padding-top: 1.25rem;
    border-top: 1px solid rgba(0, 0, 0, 0.06);
    transition: border-color 0.4s ease;
  }

  .product-card:hover .product-specs {
    border-color: rgba(232, 97, 45, 0.15);
  }

  .spec-val {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1.15rem;
  }

  .spec-lbl {
    font-size: 0.65rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--steel-400);
  }

  .product-arrow {
    position: absolute;
    bottom: 2rem;
    right: 2rem;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: rgba(0, 0, 0, 0.04);
    color: var(--steel-400);
    opacity: 0;
    transform: translateX(-8px);
    transition: all 0.3s ease;
  }

  .product-card:hover .product-arrow {
    opacity: 1;
    transform: translateX(0);
    background: rgba(232, 97, 45, 0.15);
    color: var(--zephyr-orange);
  }

  /* ===== BANNER ===== */
  .banner {
    position: relative;
    background: var(--zephyr-orange);
    padding: 5rem 2rem;
    overflow: hidden;
  }

  .banner-pattern {
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      -45deg,
      transparent,
      transparent 20px,
      rgba(0, 0, 0, 0.03) 20px,
      rgba(0, 0, 0, 0.03) 40px
    );
  }

  .banner-stats {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 4rem;
    margin-top: 2.5rem;
  }

  .banner-stat { text-align: center; }

  .banner-stat-num {
    font-family: var(--font-display);
    font-weight: 900;
    font-size: 3rem;
    color: white;
    line-height: 1;
  }

  .banner-stat-lbl {
    font-family: var(--font-display);
    font-weight: 500;
    font-size: 0.65rem;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.7);
    margin-top: 0.25rem;
  }

  /* ===== CAPABILITIES ===== */
  .capabilities-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .capability-card {
    padding: 2rem;
    background: white;
    border-top: 3px solid transparent;
    transition: all 0.3s ease;
  }

  .capability-card:hover {
    border-top-color: var(--zephyr-orange);
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.06);
    transform: translateY(-2px);
  }

  .capability-num {
    font-family: var(--font-display);
    font-weight: 300;
    font-size: 2.5rem;
    color: var(--steel-100);
    line-height: 1;
    margin-bottom: 1rem;
  }

  /* ===== CTA ===== */
  .cta-section {
    background: var(--steel-900);
    padding: 6rem 2rem;
  }

  /* ===== ANIMATIONS ===== */
  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(24px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes scrollPulse {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 1; }
  }

  @media (max-width: 768px) {
    .product-grid { grid-template-columns: 1fr; }
    .banner-stats { gap: 2.5rem; }
    .hero-actions { flex-direction: column; align-items: center; }
    .mh-accordion { flex-direction: column; height: auto; }
    .mh-panel { flex: none !important; height: 52px; padding: 14px 20px; }
    .mh-panel.active { height: 360px; padding: 24px; }
    .mh-collapsed-title { transform: translate(-50%, -50%) rotate(0deg); font-size: 14px; letter-spacing: 4px; }
    .mh-title { font-size: 26px; }
    .mh-number { font-size: 36px; top: 12px; right: 14px; }
    .mh-desc { font-size: 0.8rem; max-width: 100%; }
    .mh-nav-arrow { width: 34px; height: 34px; }
  }

  /* ===== PRODUCT CATEGORIES ACCORDION ===== */
  .mh-accordion {
    display: flex;
    width: 100%;
    height: 500px;
    border-radius: 4px;
    overflow: hidden;
    box-shadow: 0 25px 80px rgba(0,0,0,0.5);
  }

  .mh-panel {
    flex: 0.3;
    position: relative;
    overflow: hidden;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 16px;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .mh-panel.active { flex: 3.5; padding: 36px; }
  .mh-panel:not(:last-child) { border-right: 1px solid rgba(255,255,255,0.08); }

  .mh-panel--dark { background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); }
  .mh-panel--orange { background: linear-gradient(135deg, var(--zephyr-orange) 0%, #c43d0a 100%); }
  .mh-panel--steel { background: linear-gradient(135deg, #4A5259 0%, #3a4249 100%); }

  .mh-pattern {
    position: absolute; inset: 0; opacity: 0.03; pointer-events: none;
    background-image: repeating-linear-gradient(45deg, transparent, transparent 10px, currentColor 10px, currentColor 11px);
  }
  .mh-panel--dark .mh-pattern, .mh-panel--steel .mh-pattern { color: var(--zephyr-orange); }
  .mh-panel--orange .mh-pattern { color: white; }

  .mh-collapsed-title {
    position: absolute; top: 50%; left: 50%;
    transform: translate(-50%, -50%) rotate(-90deg);
    white-space: nowrap;
    font-family: var(--font-display); font-weight: 700; font-size: 16px;
    letter-spacing: 5px; text-transform: uppercase;
    opacity: 1; transition: opacity 0.3s ease; pointer-events: none;
  }
  .mh-panel--dark .mh-collapsed-title, .mh-panel--steel .mh-collapsed-title { color: var(--zephyr-orange); }
  .mh-panel--orange .mh-collapsed-title { color: white; }
  .mh-panel.active .mh-collapsed-title { opacity: 0; }

  .mh-number {
    position: absolute; top: 24px; right: 24px;
    font-family: var(--font-display); font-size: 52px; font-weight: 300;
    opacity: 0.2; line-height: 1;
  }
  .mh-panel--dark .mh-number, .mh-panel--steel .mh-number { color: var(--zephyr-orange); }
  .mh-panel--orange .mh-number { color: white; }

  .mh-content {
    opacity: 0; transform: translateY(20px);
    transition: all 0.4s ease 0.1s; pointer-events: none;
  }
  .mh-panel.active .mh-content { opacity: 1; transform: translateY(0); pointer-events: auto; }

  .mh-subtitle {
    font-family: var(--font-display); font-weight: 600;
    font-size: 12px; letter-spacing: 4px; text-transform: uppercase;
    margin-bottom: 6px;
  }
