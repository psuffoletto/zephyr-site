---
const currentYear = new Date().getFullYear();

const productLinks = [
  { label: 'Dust Collectors', href: '/products/dust-collectors' },
  { label: 'Conveyors', href: '/products/conveyors' },
  { label: 'Industrial Valves', href: '/products/industrial-valves' },
  { label: 'Bedding Systems', href: '/products/bedding-systems' },
  { label: 'Silos & Bins', href: '/products/silos-and-bins' },
  { label: 'Dedusters', href: '/products/dedusters' },
];

const companyLinks = [
  { label: 'About Us', href: '/about' },
  { label: 'Contact', href: '/contact' },
];
---

<footer class="site-footer">
  <div class="footer-inner">
    <div class="footer-grid">

      <!-- Brand Column -->
      <div class="footer-brand">
        <a href="/" class="footer-logo">
          <img src="https://static.wixstatic.com/media/197c28_a628c68ec4fe4d569285335f017180d5~mv2.png" alt="Zephyr Equipment" class="footer-logo-img" />
        </a>
        <p class="footer-tagline">Built to Move.</p>
        <p class="footer-desc">
          Custom-designed bulk material handling equipment manufactured in Orchard Park, New York.
        </p>
        <div class="footer-contact-info">
          <p>227 Thorn Avenue, Suite C2</p>
          <p>Orchard Park, NY 14127</p>
          <p style="margin-top: 0.4rem;"><a href="tel:7165687882">716.568.7882</a></p>
          <p><a href="mailto:info@zephyrbhs.com">info@zephyrbhs.com</a></p>
        </div>
      </div>

      <!-- Products Column -->
      <div class="footer-col">
        <h4 class="footer-heading">Products</h4>
        {productLinks.map(link => (
          <a href={link.href} class="footer-link">{link.label}</a>
        ))}
      </div>

      <!-- Company Column -->
      <div class="footer-col">
        <h4 class="footer-heading">Company</h4>
        {companyLinks.map(link => (
          <a href={link.href} class="footer-link">{link.label}</a>
        ))}
      </div>

      <!-- Contact Column -->
      <div class="footer-col">
        <h4 class="footer-heading">Location</h4>
        <p class="footer-address">
          Orchard Park, NY<br />
          United States
        </p>
        <a href="/contact" class="btn btn--outline footer-cta">Get a Quote</a>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} Zephyr Equipment, LLC. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: var(--steel-900);
    color: var(--steel-300);
    border-top: 3px solid var(--zephyr-orange);
  }

  .footer-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem 2rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 3rem;
  }

  /* Brand */
  .footer-logo {
    display: block;
    margin-bottom: 1rem;
    text-decoration: none;
  }

  .footer-logo-img {
    height: 56px;
    width: auto;
    filter: brightness(0) invert(1);
    opacity: 0.9;
    transition: opacity 0.2s ease;
  }

  .footer-logo:hover .footer-logo-img {
    opacity: 1;
  }

  .footer-tagline {
    font-family: var(--font-accent);
    font-size: 1.2rem;
    color: var(--steel-300);
    margin-bottom: 0.75rem;
  }

  .footer-desc {
    font-size: 0.85rem;
    line-height: 1.6;
    color: var(--steel-400);
    max-width: 280px;
  }

  .footer-contact-info {
    margin-top: 0.75rem;
    font-size: 0.8rem;
    color: var(--steel-400);
    line-height: 1.8;
  }
  .footer-contact-info a {
    color: var(--steel-300);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  .footer-contact-info a:hover {
    color: var(--zephyr-orange);
  }

  /* Columns */
  .footer-heading {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 0.7rem;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: var(--zephyr-orange);
    margin-bottom: 1.25rem;
  }

  .footer-link {
    display: block;
    font-size: 0.85rem;
    color: var(--steel-300);
    padding: 0.3rem 0;
    transition: color 0.2s ease, padding-left 0.2s ease;
    text-decoration: none;
  }

  .footer-link:hover {
    color: var(--zephyr-orange);
    padding-left: 0.25rem;
  }

  .footer-address {
    font-size: 0.85rem;
    line-height: 1.6;
    color: var(--steel-400);
    margin-bottom: 1.25rem;
  }

  .footer-cta {
    font-size: 0.65rem;
    padding: 0.5rem 1.25rem;
  }

  /* Bottom */
  .footer-bottom {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    text-align: center;
    font-size: 0.75rem;
    color: var(--steel-500);
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 2.5rem;
    }
    .footer-brand {
      grid-column: 1 / -1;
    }
  }

  @media (max-width: 480px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
