---
const currentPath = Astro.url.pathname;

const aboutLinks = [
  { label: 'About Us', href: '/about' },
  { label: 'Careers', href: '/about/careers' },
];

const bulkLinks = [
  { label: 'Unload', href: '/products/unload' },
  { label: 'Fill', href: '/products/fill' },
  { label: 'Store', href: '/products/store' },
  { label: 'Filter', href: '/products/filter' },
  { label: 'Convey', href: '/products/convey' },
  { label: 'Clean', href: '/products/clean' },
  { label: 'Automate', href: '/products/automate' },
  { label: 'Power', href: '/products/power' },
];

const beddingLinks = [
  { heading: 'Delivery', items: [
    { label: 'LX Series', href: '/bedding/delivery/lx-series' },
    { label: 'MX Series', href: '/bedding/delivery/mx-series' },
    { label: 'VX Series', href: '/bedding/delivery/vx-series' },
  ]},
  { heading: 'Dispensing', items: [
    { label: '504 Series', href: '/bedding/dispensing/504-series' },
    { label: '506 Series', href: '/bedding/dispensing/506-series' },
  ]},
  { heading: 'Disposal', items: [
    { label: 'VF Series', href: '/bedding/disposal/vf-series' },
    { label: 'GF Series', href: '/bedding/disposal/gf-series' },
  ]},
];
---

<header class="site-header" id="site-header">
  <div class="header-inner">
    <a href="/" class="logo" aria-label="Zephyr Equipment Home">
      <img src="https://static.wixstatic.com/media/197c28_a628c68ec4fe4d569285335f017180d5~mv2.png" alt="Zephyr Equipment" class="logo-img" />
    </a>

    <nav class="main-nav" id="main-nav">
      <div class="nav-item has-dropdown">
        <a href="/bulk" class:list={["nav-link", { active: currentPath.startsWith('/bulk') || currentPath.startsWith('/products') }]}>
          Bulk
          <svg width="10" height="6" viewBox="0 0 10 6" fill="none"><path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/></svg>
        </a>
        <div class="dropdown">
          {bulkLinks.map(link => (
            <a href={link.href} class="dropdown-link">{link.label}</a>
          ))}
        </div>
      </div>
      <div class="nav-item has-dropdown">
        <a href="/bedding" class:list={["nav-link", { active: currentPath.startsWith('/bedding') }]}>
          Bedding
          <svg width="10" height="6" viewBox="0 0 10 6" fill="none"><path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/></svg>
        </a>
        <div class="dropdown dropdown--bedding">
          {beddingLinks.map(section => (
            <div class="dropdown-section">
              <span class="dropdown-heading">{section.heading}</span>
              {section.items.map(link => (
                <a href={link.href} class="dropdown-link">{link.label}</a>
              ))}
            </div>
          ))}
        </div>
      </div>
      <a href="/service" class:list={["nav-link", { active: currentPath === '/service' }]}>Service</a>
      <a href="/news" class:list={["nav-link", { active: currentPath.startsWith('/news') }]}>News</a>
      <a href="/success-stories" class:list={["nav-link", { active: currentPath.startsWith('/success-stories') }]}>Success Stories</a>
      <div class="nav-item has-dropdown">
        <a href="/about" class:list={["nav-link", { active: currentPath.startsWith('/about') }]}>
          About
          <svg width="10" height="6" viewBox="0 0 10 6" fill="none"><path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/></svg>
        </a>
        <div class="dropdown">
          {aboutLinks.map(link => (
            <a href={link.href} class="dropdown-link">{link.label}</a>
          ))}
        </div>
      </div>
      <a href="/contact" class:list={["nav-link", { active: currentPath === '/contact' }]}>Contact</a>
    </nav>

    <a href="/contact" class="header-cta btn btn--primary">Get a Quote</a>

    <button class="mobile-toggle" id="mobile-toggle" aria-label="Toggle menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</header>

<!-- Mobile Menu -->
<div class="mobile-menu" id="mobile-menu">
  <nav class="mobile-nav">
    <a href="/bulk" class="mobile-link">Bulk</a>
    {bulkLinks.map(link => (
      <a href={link.href} class="mobile-link mobile-link--sub">{link.label}</a>
    ))}
    <a href="/bedding" class="mobile-link">Bedding</a>
    {beddingLinks.map(section => (
      <>
        <span class="mobile-link mobile-link--heading">{section.heading}</span>
        {section.items.map(link => (
          <a href={link.href} class="mobile-link mobile-link--sub">{link.label}</a>
        ))}
      </>
    ))}
    <a href="/service" class="mobile-link">Service</a>
    <a href="/news" class="mobile-link">News</a>
    <a href="/success-stories" class="mobile-link">Success Stories</a>
    <a href="/about" class="mobile-link">About</a>
    <a href="/about/careers" class="mobile-link mobile-link--sub">Careers</a>
    <a href="/contact" class="mobile-link">Contact</a>
    <a href="/contact" class="btn btn--primary" style="margin-top: 1.5rem; width: 100%; justify-content: center;">Get a Quote</a>
  </nav>
</div>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    height: var(--header-height);
    background: rgba(15, 26, 38, 0.95);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(232, 97, 45, 0.1);
    transition: all 0.3s ease;
  }

  .site-header.scrolled {
    background: rgba(15, 26, 38, 0.98);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
  }

  .header-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  /* Logo */
  .logo {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .logo-img {
    height: 64px;
    width: auto;
    filter: brightness(0) invert(1);
    transition: opacity 0.2s ease;
  }

  .logo:hover .logo-img {
    opacity: 0.85;
  }

  /* Nav */
  .main-nav {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .nav-link {
    font-family: var(--font-display);
    font-weight: 500;
    font-size: 0.8rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--steel-300);
    padding: 0.5rem 1rem;
    transition: color 0.2s ease;
    display: flex;
    align-items: center;
    gap: 0.35rem;
    text-decoration: none;
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--zephyr-orange);
  }

  .nav-link svg {
    transition: transform 0.2s ease;
  }

  /* Dropdown */
  .nav-item {
    position: relative;
  }

  .dropdown {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(8px);
    background: var(--steel-800);
    border: 1px solid rgba(232, 97, 45, 0.15);
    min-width: 220px;
    padding: 0.5rem 0;
    opacity: 0;
    visibility: hidden;
    transition: all 0.25s ease;
  }

  .dropdown--bedding {
    min-width: 240px;
    padding: 0.75rem 0;
  }

  .nav-item:hover .dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  .nav-item:hover .nav-link svg {
    transform: rotate(180deg);
  }

  .dropdown-section {
    padding: 0.25rem 0;
  }

  .dropdown-section:not(:last-child) {
    border-bottom: 1px solid rgba(255,255,255,0.05);
    padding-bottom: 0.5rem;
    margin-bottom: 0.25rem;
  }

  .dropdown-heading {
    display: block;
    padding: 0.4rem 1.5rem;
    font-family: var(--font-display);
    font-size: 0.65rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--zephyr-orange);
  }

  .dropdown-link {
    display: block;
    padding: 0.6rem 1.5rem;
    font-family: var(--font-body);
    font-size: 0.85rem;
    font-weight: 400;
    color: var(--steel-200);
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .dropdown-link:hover {
    color: var(--zephyr-orange);
    background: rgba(232, 97, 45, 0.05);
    padding-left: 1.75rem;
  }

  /* Header CTA */
  .header-cta {
    font-size: 0.7rem;
    padding: 0.6rem 1.5rem;
  }

  /* Mobile Toggle */
  .mobile-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
  }

  .mobile-toggle span {
    display: block;
    width: 24px;
    height: 2px;
    background: white;
    transition: all 0.3s ease;
  }

  .mobile-toggle.open span:nth-child(1) { transform: translateY(7px) rotate(45deg); }
  .mobile-toggle.open span:nth-child(2) { opacity: 0; }
  .mobile-toggle.open span:nth-child(3) { transform: translateY(-7px) rotate(-45deg); }

  /* Mobile Menu */
  .mobile-menu {
    position: fixed;
    top: var(--header-height);
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--steel-900);
    z-index: 999;
    padding: 2rem;
    transform: translateX(100%);
    transition: transform 0.35s var(--ease-out);
    overflow-y: auto;
  }

  .mobile-menu.open {
    transform: translateX(0);
  }

  .mobile-link {
    display: block;
    font-family: var(--font-display);
    font-weight: 600;
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: white;
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    text-decoration: none;
  }

  .mobile-link--sub {
    font-weight: 400;
    font-size: 0.9rem;
    color: var(--steel-300);
    padding-left: 1.5rem;
  }

  .mobile-link--heading {
    font-weight: 600;
    font-size: 0.7rem;
    letter-spacing: 0.2em;
    color: var(--zephyr-orange);
    padding-left: 1.5rem;
    padding-top: 0.5rem;
    padding-bottom: 0.25rem;
    border-bottom: none;
  }

  @media (max-width: 768px) {
    .main-nav,
    .header-cta {
      display: none;
    }
    .mobile-toggle {
      display: flex;
    }
  }
</style>

<script>
  // Scroll behavior
  const header = document.getElementById('site-header');
  window.addEventListener('scroll', () => {
    header?.classList.toggle('scrolled', window.scrollY > 50);
  });

  // Mobile menu
  const toggle = document.getElementById('mobile-toggle');
  const menu = document.getElementById('mobile-menu');
  toggle?.addEventListener('click', () => {
    toggle.classList.toggle('open');
    menu?.classList.toggle('open');
    document.body.style.overflow = menu?.classList.contains('open') ? 'hidden' : '';
  });
</script>
